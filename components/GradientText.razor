@namespace ApeTavern.Components
@inherits Panel

@if ( Text is null )
{
	return;
}

<root>
	@for ( var i = 0; i < Text.Length; i++ )
	{
		<span
			style="color: @Color.Lerp( StartColor, EndColor, (float)i / (Text.Length - 1) ).Hex">
			@Text[i].ToString()
		</span>
	}
</root>

@code
{
	public string Text { get; set; }
	public Color StartColor { get; set; }
	public Color EndColor { get; set; }

	protected override int BuildHash()
	{
		return HashCode.Combine( Text, StartColor, EndColor );
	}
}
